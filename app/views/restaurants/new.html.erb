<h1>create a new restaurant</h1>

<%= form_for(@restaurant) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to "restaurants list", restaurants_path%>

